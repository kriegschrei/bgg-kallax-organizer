{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/schemas/responses/games/post-response.schema.json",
    "title": "Post Games Response",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "cubes": {
        "type": "array",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "id": { "type": "integer" },
            "stats": { "$ref": "../../$defs/types.schema.json#/$defs/cubeStats" },
            "games": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "gameId": { "type": "integer" },
                  "versionId": { "type": "integer" },
                  "gameName": { "type": "string" },
                  "versionName": { "type": "string" },
                  "dimensions": {
                    "type": "array",
                    "items": { "$ref": "../../$defs/types.schema.json#/$defs/dimension" }
                  },
                  "startPosition": { "$ref": "../../$defs/types.schema.json#/$defs/position" },
                  "oversized": { "$ref": "../../$defs/types.schema.json#/$defs/oversized" },
                  "categories": { "type": "array", "items": { "type": "string" } },
                  "mechanics": { "type": "array", "items": { "type": "string" } },
                  "families": { "type": "array", "items": { "type": "string" } },
                  "bggRank": { "type": "integer" },
                  "minPlayers": { "type": "integer" },
                  "maxPlayers": { "type": "integer" },
                  "bestPlayerCount": { "type": "integer" },
                  "minPlaytime": { "type": "integer" },
                  "maxPlaytime": { "type": "integer" },
                  "age": { "type": "integer" },
                  "communityAge": { "type": "integer" },
                  "weight": { "type": "number" },
                  "bggRating": { "type": "number" },
                  "missingVersion": { "type": "boolean" },
                  "versionsUrl": { "type": "string", "format": "uri" },
                  "usedAlternateVersionDims": { "type": "boolean" },
                  "correctionUrl": { "type": "string", "format": "uri" },
                  "orientation": { "$ref": "../../$defs/types.schema.json#/$defs/orientation" }
                },
                "required": [
                  "gameId","versionId","gameName","versionName","dimensions","startPosition",
                  "oversized","categories","mechanics","families","bggRank","minPlayers","maxPlayers",
                  "bestPlayerCount","minPlaytime","maxPlaytime","age","communityAge","weight",
                  "bggRating","missingVersion","versionsUrl","usedAlternateVersionDims",
                  "correctionUrl","orientation"
                ]
              }
            }
          },
          "required": ["id","stats","games"]
        }
      },
      "stats": { "$ref": "../../$defs/types.schema.json#/$defs/statsSummary" },
      "dimensionSummary": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "guessedVersionCount": { "type": "integer" },
          "selectedVersionFallbackCount": { "type": "integer" },
          "missingDimensionCount": { "type": "integer" },
          "exceedingCapacityCount": { "type": "integer" }
        },
        "required": ["guessedVersionCount","selectedVersionFallbackCount","missingDimensionCount","exceedingCapacityCount"]
      },
      "oversizedGames": { "type": "array", "items": { "type": "integer" } }
    },
    "required": ["cubes","stats","dimensionSummary","oversizedGames"]
  }
  